<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        >

        <TextView
            android:id="@+id/numer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:gravity="center"
            android:text="0"
            android:textSize="20dp" />


    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/acborrar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="#B4B8B7"
                    android:text="AC"></Button>

                <Button
                    android:id="@+id/mameno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"

                    android:background="#B4B8B7"
                    android:text="+/-"></Button>

                <Button
                    android:id="@+id/porciento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B4B8B7"
                    android:text="%"></Button>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/bt_redondo"
                    android:text="7"></Button>

                <Button
                    android:id="@+id/bt_8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/bt_redondo"
                    android:text="8"></Button>

                <Button
                    android:id="@+id/bt_9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bt_redondo"
                    android:text="9"></Button>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/bt_redondo"
                    android:text="4"></Button>

                <Button
                    android:id="@+id/bt_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/bt_redondo"
                    android:text="5"></Button>

                <Button
                    android:id="@+id/bt_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bt_redondo"
                    android:text="6"></Button>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/bt_redondo"
                    android:text="1"></Button>

                <Button
                    android:id="@+id/bt_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/bt_redondo"
                    android:text="2"></Button>

                <Button
                    android:id="@+id/bt_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bt_redondo"
                    android:text="3"></Button>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/bt_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/bt_redondo"
                    android:text="0"></Button>

                <Button
                    android:id="@+id/bt_coma"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:background="@drawable/bt_redondo"
                    android:text=","></Button>

            </TableRow>


        </TableLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:orientation="vertical"
                android:text="HOLA">

                <Button
                    android:id="@+id/bt_division"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#FDD835"
                    android:text="/"></Button>

                <Button
                    android:id="@+id/bt_multiplicacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#FDD835"
                    android:text="x"></Button>

                <Button
                    android:id="@+id/bt_resta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#FDD835"
                    android:text="-"></Button>

                <Button
                    android:id="@+id/bt_suma"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#FDD835"
                    android:text="+"></Button>

                <Button
                    android:id="@+id/bt_igualdad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#FDD835"
                    android:text="="></Button>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</TableLayout>